<div class = "page-header">
    <center><h1><font color = '#E5A823'>Log In</font></h1></center>
</div>


<%= form_tag sessions_path do %>
    <center>
    <div class = "form-group">
        <%= email_field_tag :email, params[:email], class: "form-control", placeholder: "Email Address" %>
    </div><br \>
    <div class = "form-group">
        <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %>
    </div><br \>
    <%= submit_tag "Log In", class: "btn btn-primary" %>
    <br \>
    <font color = '#E5A823'>Don't have an account? <%=link_to 'Sign Up', signup_path, style: 'color:#E5A823'%></font>
    
    </center>
    <%=render 'layouts/homepageBackground' %>
<% end %>
